@model PCCustomize.Models.Computer

@{
    ViewBag.Title = "Edit Customize PC";
    ViewBag.PadTitle = "Edit a Customized Computer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
